LIB     = ../../libgfsio_big_4.a
INCMOD  = ../../incmod/gfsio_big_4
FC      = $(FCS)
FFLAGS  = -qnosave -O3 -q free=f90 -I$(INCMOD)
FFLAGB  = -qnosave -O3 -q fixed
FFLAGS  = -traceback -g -xHOST -convert big_endian -assume byterecl  -I$(INCMOD) -FR
FFLAGB  = -O2 -traceback -g -xHOST -convert big_endian -assume byterecl 
#FFLAGS = -g -C -qextchk -qflttrap -qnosave -O3 -q free=f90 -I$(INCMOD)
#FFLAGB = -g -C -qextchk -qflttrap -qnosave -O3 -q fixed
AR      = ar
ARFLAGS = -rv 

$(LIB): $(LIB)(gfsio_module.o) 
.f.a:
	$(FC) -c $(FFLAGS) $<
	$(AR) $(ARFLAGS) $@ $*.o
	rm -f $*.o
	mv $*.mod $(INCMOD)

